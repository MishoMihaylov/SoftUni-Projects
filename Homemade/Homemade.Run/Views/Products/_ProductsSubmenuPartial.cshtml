@model List<Homemade.Models.EntityModels.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<table class="table">
    @foreach (var product in Model)
    {
        <tr>
            <td>
                @product.Name (@product.Category)
            </td>
            <td>
                @product.Producer
            </td>
            <td>
                @product.Quantity
            </td>
            <td>
                @product.Price
            </td>
            <td>
                <button class="btn btn-success">
                    Add To Cart
                </button>
            </td>
        </tr>
    }
</table>
